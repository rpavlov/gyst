= form_for @goal, :remote => true do |f|
	%div{:id=>"post_errors", :style=>"display:none"}
	%span{:class=>"field"}= f.text_field :content, :id=>"form-input-field" 
	%span{:class=>"field"}= f.submit
	%div{:class=>"field"}
		%label Daily
		= f.radio_button :daily, true
		%label Today
		= f.radio_button :daily , false
		%label Date
		= f.radio_button :daily , false